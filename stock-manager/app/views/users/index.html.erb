<p id="notice"><%= notice %></p>
<div class="container row">
<h1 class="col-xs-4">Users</h1>
<%= link_to 'Add User', new_user_registration_path, class:"table-header ml-auto btn btn-primary" %>
</div>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Created On</th>
      <th scope="col">Portfolio Manager</th>
      <th scope="col" colspan="3" width=20%>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td> <%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>
        <td><%= user.manager %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:"fa fa-pencil-alt" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"fa fa-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
